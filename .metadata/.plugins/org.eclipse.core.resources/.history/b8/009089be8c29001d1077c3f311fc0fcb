package br.com.residencia.poo.aula1;

public class Exercicio2 {

	public static void main(String[] args) {
		
		        StringBuffer b = new StringBuffer();
		        for (int i = 0; i < args.length; i++) {
		            if (args[i].length() > i) {
		                b.append(args[i].charAt(i));
		            } else {
		                b.append('?');
		            }
		        }
		        return b.toString();
		                }
		
	}

}
